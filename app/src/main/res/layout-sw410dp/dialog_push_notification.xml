<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp">


    <TextView
        style="@style/TextView_Custom"
        android:layout_marginTop="10dp"
        android:text="@string/text_notification_type"
        android:textSize="15sp"
        android:lines="1"
        />

    <Spinner
        android:id="@+id/spnDialogPushNoti_NotificationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_shape"
        android:popupBackground="@drawable/edit_text_shape">

    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.5">

                <TextView
                    style="@style/TextView_Custom"
                    android:layout_marginTop="5dp"
                    android:text="@string/text_start_date" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="#205963"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_calendar" />

                    <EditText
                        android:id="@+id/edtDialogPushNoti_StartDate"
                        style="@style/EditText_Custom"
                        android:inputType="none"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView_Custom"
                    android:layout_marginTop="5dp"
                    android:text="@string/text_start_time" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="#205963"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_duration" />

                    <EditText
                        android:id="@+id/edtDialogPushNoti_StartTime"
                        style="@style/EditText_Custom"
                        android:inputType="none"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.5">

                <TextView
                    style="@style/TextView_Custom"
                    android:layout_marginTop="5dp"
                    android:text="@string/text_end_date" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="#205963"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_calendar" />

                    <EditText
                        android:id="@+id/edtDialogPushNoti_EndDate"
                        style="@style/EditText_Custom"
                        android:inputType="none"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView_Custom"
                    android:layout_marginTop="5dp"
                    android:text="@string/text_end_time" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="#205963"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_duration" />

                    <EditText
                        android:id="@+id/edtDialogPushNoti_EndTime"
                        style="@style/EditText_Custom"
                        android:inputType="none"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnDialogPushNoti_Push"
        style="@style/Button_Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/text_push"
        />

</LinearLayout>