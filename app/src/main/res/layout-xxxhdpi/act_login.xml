<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    tools:context="com.example.luisle.equiz.Activity.LoginAct">

    <TextView
        style="@style/TextView_Custom"
        android:text= "@string/text_email"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_account"
            android:scaleType="centerInside"
            android:background="#205963"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/edtLoginAct_Email"
            style="@style/EditText_Custom"
            android:hint="example@abcd.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            />
    </LinearLayout>


    <TextView
        style="@style/TextView_Custom"
        android:layout_marginTop="10dp"
        android:text="@string/text_password"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_password"
            android:background="#205963"
            android:scaleType="centerInside"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/edtLoginAct_Pass"
            style="@style/EditText_Custom"
            android:hint="********"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            />
    </LinearLayout>

    <Button
        style="@style/Button_Custom"
        android:layout_marginTop="50dp"
        android:id="@+id/btnLoginAct_Login"
        android:text="@string/text_login"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btnLoginAct_Forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/text_forgotpass"
        android:textColor="#FAFAF9"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackground"
        />

    <Button
        android:id="@+id/btnLoginAct_Register"
        style="@style/Button_Custom"
        android:layout_marginTop="25dp"
        android:text="@string/text_register"
        android:textAlignment="center"
        />

</LinearLayout>
